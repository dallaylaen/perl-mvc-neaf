#!/usr/bin/env perl

use strict;
use warnings;

use MVC::Neaf;

MVC::Neaf->route( "/" => sub {
	my $neaf = shift;

	my $name = $neaf->param( name => qr/\w+/, 'Stranger' );

	return {
		name => $name,
		-template => \"Hello, [% name %]!\n",
		-view => 'TT',
		-type => 'text/plain',
	};
});

MVC::Neaf->run;

