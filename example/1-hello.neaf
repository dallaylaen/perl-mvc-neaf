#!/usr/bin/env perl

use strict;
use warnings;

use MVC::Neaf;

MVC::Neaf->route( "/" => sub {
	my $neaf = shift;

	my $name = $neaf->param( name => qr/\w+/, 'Stranger' );
	my $jsonp = $neaf->param( jsonp => qr/\w+/ );

	return {
		name => $name,
		-template => \"Hello, [% name %]!\n",
		-view => $jsonp ? 'JS' : 'TT',
		-type => 'text/plain',
		-callback => $jsonp,
	};
});

MVC::Neaf->run;

